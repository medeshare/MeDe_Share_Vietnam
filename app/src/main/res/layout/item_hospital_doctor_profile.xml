<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tvSpecialtyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfile"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="Specialty : "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvSpecialtyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSpecialtyTitle"
        android:layout_toRightOf="@+id/tvSpecialtyTitle"
        android:text="Cataract, Glaucoma"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvDepartmentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSpecialtyTitle"
        android:layout_alignLeft="@+id/tvSpecialtyTitle"
        android:layout_alignStart="@+id/tvSpecialtyTitle"
        android:text="Departments : "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvDepartmentsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDepartmentsTitle"
        android:layout_toRightOf="@+id/tvDepartmentsTitle"
        android:text="Ophthalmology"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDepartmentsTitle"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:text="Dr. Michael"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/btnCall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/ivProfile"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignRight="@+id/ivProfile"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="19dp"
        android:background="@android:color/transparent"
        android:onClick="onCall"
        app:srcCompat="@drawable/btn_46_call" />
</RelativeLayout>