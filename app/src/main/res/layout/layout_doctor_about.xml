<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layTop"
                layout="@layout/item_doctor_about_top" />

            <include
                android:id="@+id/layIntroduce"
                layout="@layout/item_doctor_about_introduce" />

            <include
                android:id="@+id/layLocation"
                layout="@layout/item_doctor_about_location" />

            <include
                android:id="@+id/layPrice"
                layout="@layout/item_doctor_about_price" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>