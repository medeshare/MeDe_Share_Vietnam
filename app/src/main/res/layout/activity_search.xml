<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1990ff"
    tools:context="mede.com.medesharevietnam.SearchActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#1990ff"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1990ff"
                android:orientation="horizontal"
                android:padding="12dp">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/tvMediSearch"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="fill_vertical"
                    android:hint="Type your symptom here"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:textColor="#9b9b9b"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnMediSearch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:onClick="onMediSearch"
                    app:srcCompat="@drawable/ic_30_search" />
            </FrameLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f0f2f7 "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="No Recent Search History" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
